{
    "metadata": [
        {
            "src": [
                {
                    "files": ["src/**.csproj"],
                    "exclude": ["**/obj/**", "**/bin/**", "_site/**"]
                }
            ],
            "dest": "api"
        }
    ],
    "build": {
        "content": [
            {
                "files": [
                    "codegen/**.md",
                    "components/**.md",
                    "patterns/**.md",
                    "prototyping/**.md",
                    "style/**.md",
                    "sidebar-toc/toc.yml",
                    "toc.yml",
                    "*.md"
                ],
                "exclude": ["obj/**", "_site/**"]
            }
        ],
        "resource": [
            {
                "files": ["images/**"],
                "exclude": ["obj/**", "_site/**"]
            }
        ],
        "overwrite": [
            {
                "files": ["apidoc/**.md"],
                "exclude": ["obj/**", "_site/**"]
            }
        ],
        "dest": "_site",
        "globalMetadataFiles": ["global.json", "../node_modules/igniteui-docfx-template/template/bundling.global.json"],
        "fileMetadataFiles": [],
        "template": ["../node_modules/igniteui-docfx-template/template"],
        "postProcessors": ["SetEnvironmentVariables"],
        "noLangKeyword": false,
        "keepFileLink": false,
        "cleanupCacheHistory": true,
        "disableGitFeatures": true,
        "sitemap": {
            "baseUrl": "https://www.infragistics.com/products/indigo-design/help/",
            "changefreq": "weekly",
            "priority": 0.7
        }
    }
}
